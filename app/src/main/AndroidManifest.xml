<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="junkuvo.apps.meallogger">

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityLogListAll"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityLogRegister" />

        <service
            android:name=".service.NotificationService"
            android:enabled="true" />

        <receiver android:name=".receiver.ReceivedActivity">
            <intent-filter>
                <!--定義したactionを追記する-->
                <action android:name="ALARM" />
                <action android:name="add" />
                <action android:name="click_notification" />
                <action android:name="delete_notification" />
            </intent-filter>
        </receiver>


    </application>

</manifest>