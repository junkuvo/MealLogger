<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="junkuvo.apps.meallogger">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>
    <uses-permission android:name="android.permission.VIBRATE"/>

    <application
        android:name=".Application"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActivityLogListAll"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ActivityLogRegister" />

        <service
            android:name=".service.NotificationService"
            android:enabled="true" />

        <receiver android:name=".receiver.NotificationEventReceiver">
            <intent-filter>
                <!--定義したactionを追記する-->
                <action android:name="ALARM" />
                <action android:name="add" />
                <action android:name="click_notification" />
                <action android:name="delete_notification" />
                <action android:name="click_service_notification" />
            </intent-filter>
        </receiver>


        <meta-data
            android:name="io.fabric.ApiKey"
            android:value="e96c27ec5a15ec99185fe13f2dfe59a3ce18a8c8" />
    </application>

    <uses-permission android:name="android.permission.INTERNET" />
</manifest>