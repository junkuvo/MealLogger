<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">

    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/tools"
        xmlns:cardview="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <ImageView
                android:id="@+id/imvThumbnail"
                android:layout_width="100dp"
                android:layout_height="80dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_power_settings_new_white_48dp" />

            <TextView
                android:id="@+id/txtMealMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/imvThumbnail"
                android:maxLines="3"
                android:padding="8dp"
                android:text=""
                android:textColor="#222"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/txtMealDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMealMenu"
                android:layout_alignLeft="@+id/txtMealMenu"
                android:maxLines="1"
                android:padding="8dp"
                android:text=""
                android:textColor="#222"
                android:textSize="15dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>